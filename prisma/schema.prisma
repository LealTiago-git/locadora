generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model movie {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  director    String
  duration    Int
  rentals     rental[]
}

model client {
  id      Int      @id @default(autoincrement())
  name    String
  email   String   @unique
  phone   String
  rentals rental[]
}

model rental {
  id         Int       @id @default(autoincrement())
  movieId    Int
  clientId   Int
  rentalDate DateTime  @default(now())
  returnDate DateTime?
  client     client    @relation(fields: [clientId], references: [id])
  movie      movie     @relation(fields: [movieId], references: [id])
}

model admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}
